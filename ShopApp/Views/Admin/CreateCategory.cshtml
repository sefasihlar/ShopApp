@model ShopApp.WebUI.Models.CategoryModel
@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container">
    <br />
    <h3>Create Category</h3>
    <br />
    <hr />
    <div class="row">
        <div class="col-md-8">
            <form asp-controller="admin" asp-action="CreateCategory" method="post">
                <div class="form-group row">
                    <label asp-for="Name" class="col-md-2 col-form-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Name" value="" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-2 col-form-label"></label>
                    <div class="col-md-10 offset-md-2">
                        <button type="submit" value="" class="btn btn-primary">Save Category</button>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>

