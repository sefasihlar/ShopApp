@using ShopApp.Entites
@model List<Order>
@{
    ViewData["Title"] = "OrderList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h3 style="text-align:center">OrderList</h3>
<br />
<div style="margin:0px 30px 0px 30px">
 
        <br />
        <table class="table align-middle mb-0 bg-white">
            <thead class="bg-light">
                <tr>
                    <th>Order Number</th>
                    <th>User</th>
                    <th>Phone</th>
                    <th>Email</th>
                    <th>Adress</th>
                    <th>Time</th>
                    <th>Payment Id</th>
                    <th></th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.OrderNumber</td>
                        <td>
                            <p class="fw-normal mb-1">@item.FistName @item.LastName</p>
                        </td>
                        <td>
                            <p class="fw-normal mb-1">@item.Phone</p>
                        </td>
                        <td>
                            <p class="fw-normal mb-1">@item.Email</p>
                        </td>
                        <td>
                            <p class="fw-normal mb-1">@item.Address</p>
                        </td>
                        <td>@item.OrderTime.ToLongDateString()</td>
                        <td>@item.PaymentId</td>
                        <td></td>
                        <td>
                        <a href="/admin/OrderDetails/@item.Id" class="btn btn-link badge-primary btn-pill btn-sm fw-bold">Detail</a>
                            <form action="/admin/ProductDelete/" method="post" style="display:inline">
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" style="color:white;text-decoration:none"
                                class="btn btn-link badge-danger btn-pill btn-sm fw-bold">
                                    DELETE
                                </button>
                            </form>

                        </td>
                    </tr>
                }

            </tbody>
        </table>
</div>

