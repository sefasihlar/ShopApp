<header class="header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-3 col-lg-2">
                <div class="header__logo">
                    <a href="./index.html"><img src="/Theme/img/logo.png" alt=""></a>
                </div>
            </div>
            <div class="col-xl-6 col-lg-7">
                <nav class="header__menu">
                    <ul>
                        <li class="active"><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li><a asp-controller="Shop" asp-action="WomenList">Women’s</a></li>
                        <li><a asp-controller="Shop" asp-action="ManList">Men’s</a></li>
                        <li><a asp-controller="Shop" asp-action="AllList">Shop</a></li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li>
                                <a href="#">Pages</a>
                                <ul class="dropdown">
                                    <li><a asp-controller="Shop" asp-action="Details">Product Details</a></li>
                                    <li><a asp-controller="Cart" asp-action="Index">Shop Cart</a></li>
                                </ul>
                            </li>
                            <li><a href="./blog.html">Blog</a></li>
                            <li><a asp-controller="Admin" asp-action="AdminHomePage">Admin</a></li>
                        }


                    </ul>
                </nav>
            </div>
            <div class="col-lg-3">
                <div class="header__right">
                    <div class="header__right__auth">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a asp-controller="Account" asp-action="Manage">
                                @User.Identity.Name
                            </a>


                            <a asp-controller="Account" asp-action="LogOut">Logout</a>
                            <ul class="header__right__widget">
                                <li><span class="icon_search search-switch"></span></li>
                                <li>
                                    <a href="#">
                                        <span class="icon_heart_alt"></span>
                                        <div class="tip">2</div>
                                    </a>
                                </li>
                                <li>
                                    <a href="#">
                                        <span class="icon_bag_alt"></span>
                                        <div class="tip">2</div>
                                    </a>
                                </li>
                            </ul>
                        }
                        else
                        {
                            <a asp-controller="Account" asp-action="Login">Login</a>

                            <a asp-controller="Account" asp-action="Register">Register</a>
                        }

                    </div>
                
                </div>
            </div>
        </div>
        <div class="canvas__open">
            <i class="fa fa-bars"></i>
        </div>
    </div>
</header>